{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "jsx": "preserve",
    "rootDir": "src",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@errors/*": [
        "./src/errors/*"
      ],
      "@collections/*": [
        "./src/collections/*"
      ],
      "@services/*": [
        "./src/features/*"
      ],
      "@slices/*": [
        "./src/slices/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@src/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
    ".next/types/**/*.ts"
  ]
}
